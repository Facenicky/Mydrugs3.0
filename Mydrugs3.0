// DOM Elements
const shopScreen = document.querySelector(".shop-screen");
const shippingForm = document.querySelector(".shipping-form");
const trackingSection = document.querySelector(".tracking-section");
const orderButtons = document.querySelectorAll(".order-button");
const trackingForm = document.getElementById("tracking-form");
const trackingResult = document.getElementById("tracking-result");
const mapContainer = document.getElementById("map");

// Order Data Storage
let orders = JSON.parse(localStorage.getItem("orders")) || [];

// Generate Tracking Code
function generateTrackingCode() {
  return "TRK-" + Math.random().toString(36).substring(2, 10).toUpperCase();
}

// Initialize Map
function initMap(lat, lng) {
  const map = L.map("map").setView([lat, lng], 13);
  L.tileLayer("https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png", {
    attribution: '© OpenStreetMap contributors',
  }).addTo(map);
  L.marker([lat, lng]).addTo(map).bindPopup("Your package is here!").openPopup();
}

// Handle Order Buttons
orderButtons.forEach((button) => {
  button.addEventListener("click", () => {
    shippingForm.classList.remove("hidden");
    shopScreen.scrollIntoView({ behavior: "smooth" });
  });
});

// Handle Shipping Form Submission
document.getElementById("shipping-details").addEventListener("submit", (e) => {
  e.preventDefault();
  const name = document.getElementById("name").value;
  const address = document.getElementById("address").value;
  const city = document.getElementById("city").value;
  const zip = document.getElementById("zip").value;
  const phone = document.getElementById("phone").value;

  const trackingCode = generateTrackingCode();
  const order = {
    name,
    address,
    city,
    zip,
    phone,
    trackingCode,
    status: "In Transit",
    location: { lat: 51.505, lng: -0.09 }, // Simulated location
  };

  orders.push(order);
  localStorage.setItem("orders", JSON.stringify(orders));

  alert(`Order placed successfully! Your tracking code is: ${trackingCode}`);
  shippingForm.classList.add("hidden");
  trackingSection.classList.remove("hidden");
});

// Handle Tracking Form Submission
trackingForm.addEventListener("submit", (e) => {
  e.preventDefault();
  const trackingCode = document.getElementById("tracking-code").value;
  const order = orders.find((o) => o.trackingCode === trackingCode);

  if (order) {
    trackingResult.innerHTML = `
      <h3>Order Status: ${order.status}</h3>
      <div id="map"></div>
    `;
    initMap(order.location.lat, order.location.lng); // Show live location on map
  } else {
    trackingResult.innerHTML = "<p>Invalid tracking code. Please try again.</p>";
  }
});
